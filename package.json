{
  "name": "ux-lab",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:ui": "pnpm --filter @ux-lab/ui run dev",
    "build:ui": "pnpm --filter @ux-lab/ui run build",
    "dev:showcase": "pnpm --filter @ux-lab/showcase run dev",
    "build:showcase": "pnpm --filter @ux-lab/showcase run build",
    "dev:flow": "pnpm --filter @ux-lab/flow run dev",
    "build:flow": "pnpm --filter @ux-lab/flow run build",
    "dev:applications": "pnpm --filter @ux-lab/applications run dev",
    "build:applications": "pnpm --filter @ux-lab/applications run build",
    "dev:afterglow": "pnpm --filter @ux-lab/seasonal-project-2025 run dev",
    "build:afterglow": "pnpm --filter @ux-lab/seasonal-project-2025 run build",
    "build:all": "pnpm run build:ui && pnpm run build:showcase && pnpm run build:flow && pnpm run build:applications",
    "dev:all": "concurrently \"pnpm run dev:ui\" \"pnpm run dev:showcase\" \"pnpm run dev:flow\" \"pnpm run dev:applications\"",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
